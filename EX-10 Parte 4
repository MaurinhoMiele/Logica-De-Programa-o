programa {
  funcao inicio() {
    real notas[100]
    real media = 0.0
    real soma = 0.0
    inteiro contador, quantidade
    
    escreva("Digite a quantidade de notas: ")
    leia(quantidade)
    escreva("\n")
    para(contador=0;contador<quantidade;contador++){
      escreva("Digite a nota do aluno(a): ")
      leia(notas[contador])
      escreva("\n")
      soma = notas[contador] + soma
    }

    media = soma / quantidade
    escreva("A média da turma foi: " , media)
    escreva("\n")

    se(media<6){
      escreva("A turma está abaixo da média!")
    }senao{
      escreva("A turma está acima ou na média!")
    }

  }
}
