programa {
  funcao inicio() {
    inteiro diaDaSemana

    escreva("Digite um número da semana entre (1-7): ")
    leia(diaDaSemana)

    escolha(diaDaSemana){
      caso 1:
        escreva("Domingo")
      pare

      caso 2:
        escreva("Segunda-Feira")
      pare

      caso 3:
        escreva("Terça-Feira")
      pare

      caso 4:
        escreva("Quarta-Feira")
      pare

      caso 5:
        escreva("Quinta-Feira")
      pare

      caso 6:
        escreva("Sexta-Feira")
      pare

      caso 7:
        escreva("Sábado")
      pare

      caso contrario:
        escreva("Número invalido!")
    }
  }
}
